#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš€ Running pre-push checks..."

# Check if we're in the right directory
if [ ! -f "package.json" ]; then
  echo "âŒ Error: package.json not found. Make sure you're in the project root."
  exit 1
fi

# Run comprehensive test suite
echo "ğŸ§ª Running comprehensive test suite..."
npm run test:all
if [ $? -ne 0 ]; then
  echo "âŒ Test suite failed. Please fix failing tests before pushing."
  exit 1
fi

# Run security audit
echo "ğŸ”’ Running security audit..."
npm run audit:security
if [ $? -ne 0 ]; then
  echo "âš ï¸ Security audit found vulnerabilities. Please review and fix before pushing."
  # Don't exit on audit failures in development, just warn
  echo "âš ï¸ Continuing with push, but please address security issues."
fi

# Build check
echo "ğŸ—ï¸ Running build check..."
npm run build:frontend
if [ $? -ne 0 ]; then
  echo "âŒ Build failed. Please fix build errors before pushing."
  exit 1
fi

# Check Rust tests (if src-tauri exists)
if [ -d "src-tauri" ]; then
  echo "ğŸ¦€ Running Rust tests..."
  cd src-tauri
  cargo test
  if [ $? -ne 0 ]; then
    echo "âŒ Rust tests failed. Please fix failing tests before pushing."
    exit 1
  fi
  cd ..
fi

echo "âœ… All pre-push checks passed! Ready to push."
