#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Check if we're in the right directory
if [ ! -f "package.json" ]; then
  echo "âŒ Error: package.json not found. Make sure you're in the project root."
  exit 1
fi

# Run type checking
echo "ğŸ“ Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type checking failed. Please fix TypeScript errors before committing."
  exit 1
fi

# Run linting
echo "ğŸ” Linting..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix ESLint errors before committing."
  exit 1
fi

# Check formatting
echo "ğŸ’… Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting check failed. Run 'npm run format' to fix formatting issues."
  exit 1
fi

# Run unit tests
echo "ğŸ§ª Running unit tests..."
npm run test:run
if [ $? -ne 0 ]; then
  echo "âŒ Unit tests failed. Please fix failing tests before committing."
  exit 1
fi

# Check Rust formatting (if src-tauri exists)
if [ -d "src-tauri" ]; then
  echo "ğŸ¦€ Checking Rust formatting..."
  cd src-tauri
  cargo fmt --check
  if [ $? -ne 0 ]; then
    echo "âŒ Rust formatting check failed. Run 'cargo fmt' to fix formatting issues."
    exit 1
  fi
  
  echo "ğŸ” Running Rust linting..."
  cargo clippy -- -D warnings
  if [ $? -ne 0 ]; then
    echo "âŒ Rust linting failed. Please fix Clippy warnings before committing."
    exit 1
  fi
  cd ..
fi

echo "âœ… All pre-commit checks passed!"
